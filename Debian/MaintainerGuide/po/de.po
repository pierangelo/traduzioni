"$ dpkg-gensymbols -v1.2 -plibfoo1 -Plibfoo1_1.2-1 -Osymbols\n"
msgstr ""
"$ dpkg-deb -x libfoo1_1.1-1.deb libfoo1_1.1-1\n"
